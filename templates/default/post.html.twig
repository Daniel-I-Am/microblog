{% extends 'base.html.twig' %}

{% block title %}New post{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>New post</h1>

    <form id="newPost" method="POST" action="/post_message/">
        {% if post is defined %}<input hidden="hidden" name="id" type="number" value={{post.getId()}}>{% endif %}
        <input {% if post is not defined %}name="user"{% else %}readonly{% endif %} type="text" placeholder="Username" {% if post is defined %}value={{post.getAuthor()}}{% endif %}>
        <br />
        <textarea name="content" type="text" placeholder="Post Content..." rows=10 cols=75>{% if post is defined %}{{post.getContent()}}{% endif %}</textarea>
        <br />
        <input type="submit">
    </form>
</div>
{% endblock %}
